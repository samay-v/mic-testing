<% include ../partials/header.ejs %>
<div class="ui container main segment">
    <h1>Edit <%=venue.name%></h1>

    <form class="ui form" action="/venues/<%= venue._id %>?_method=PUT" method="post">
        <div class="field">
            <label>Venue Name</label>
            <input type="text" name="venue[name]" value="<%=venue.name%>" required>
        </div>
        <div class="field">
            <label>Venue Address</label>
            <input type="text" name="venue[address]" value="<%=venue.address%>" required>
        </div>
        <div class="field">
            <label>Venue City</label>
            <input type="text" name="venue[city]" value="<%=venue.city%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="venue[image]" value="<%=venue.image%>" required>
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="venue[description]" required><%=venue.description%></textarea>
        </div>
        <div class="field">
            <label>Contact No.</label>
            <input type="text" name="venue[contact]" value="<%=venue.contact%>" required>
        </div>
        <div class="field">
            <label>days</label>
            <input type="text" name="venue[days]" value="<%=venue.days%>" required>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>
<% include ../partials/footer.ejs %>